<h1>LONGEST WORD GAME</h1>

<ul class="list">
<% @letters.each do |letter| %>
 <li><%= letter %></li>
<% end %>
</ul>

<p class="form-prefix">What is the longest word you can find?</p>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input id="letter" name="letter" type="hidden" value=<%= @letters %>/>
  <input type="text" name="word" placeholder="new">
  <input type="submit" value="Play">
</form>
